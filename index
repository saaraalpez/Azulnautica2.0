        // Funciones de navegaci√≥n
        function showSection(sectionId) {
            // Ocultar todas las secciones
            document.querySelectorAll('section').forEach(section => {
                section.classList.remove('active-section');
                section.classList.add('hidden-section');
            });
            
            // Mostrar la secci√≥n seleccionada
            document.getElementById(sectionId).classList.remove('hidden-section');
            document.getElementById(sectionId).classList.add('active-section');
            
            // Actualizar navegaci√≥n
            document.querySelectorAll('nav a').forEach(link => {
                link.classList.remove('nav-active');
                link.classList.add('text-blue-600', 'hover:text-blue-800', 'px-4', 'py-2');
            });
            
            const navElement = document.getElementById(`nav-${sectionId}`);
            if (navElement) {
                navElement.classList.add('nav-active');
                navElement.classList.remove('text-blue-600', 'hover:text-blue-800', 'px-4', 'py-2');
                navElement.classList.remove('text-pink-600', 'hover:text-pink-800');
            }
        }

        function showSharkSection(subsection) {
            // Ocultar todas las subsecciones
            document.querySelectorAll('.shark-subsection').forEach(section => {
                section.classList.add('hidden');
            });
            
            // Mostrar la subsecci√≥n seleccionada
            const targetSection = document.getElementById(`shark-section-${subsection}`);
            if (targetSection) {
                targetSection.classList.remove('hidden');
            }
            
            // Actualizar botones
            document.querySelectorAll('[id^="shark-"]').forEach(btn => {
                btn.classList.remove('boton', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
            });
            
            const activeBtn = document.getElementById(`shark-${subsection}`);
            if (activeBtn) {
                activeBtn.classList.add('boton', 'text-white');
                activeBtn.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
            }
        }

        function showJellyfishSection(subsection) {
            // Ocultar todas las subsecciones
            document.querySelectorAll('.jellyfish-subsection').forEach(section => {
                section.classList.add('hidden');
            });
            
            // Mostrar la subsecci√≥n seleccionada
            const targetSection = document.getElementById(`jellyfish-section-${subsection}`);
            if (targetSection) {
                targetSection.classList.remove('hidden');
            }
            
            // Actualizar botones
            document.querySelectorAll('[id^="jellyfish-"]').forEach(btn => {
                btn.classList.remove('bg-pink-500', 'hover:bg-pink-600', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
            });
            
            const activeBtn = document.getElementById(`jellyfish-${subsection}`);
            if (activeBtn) {
                activeBtn.classList.add('bg-pink-500', 'hover:bg-pink-600', 'text-white');
                activeBtn.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
            }
        }

        function openSpeciesModal(speciesId) {
            const species = speciesData[speciesId];
            if (species) {
                document.getElementById('modalTitle').innerHTML = species.title;
                document.getElementById('modalContent').innerHTML = species.content;
                document.getElementById('speciesModal').classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            } else {
                // Modal gen√©rico para especies sin datos espec√≠ficos
                document.getElementById('modalTitle').innerHTML = "ü¶à Informaci√≥n de Especie";
                document.getElementById('modalContent').innerHTML = `
                    <div class="text-center py-8">
                        <div class="text-6xl mb-4">ü¶à</div>
                        <h3 class="text-2xl font-bold mb-4">Informaci√≥n en desarrollo</h3>
